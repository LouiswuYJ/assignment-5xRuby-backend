<%= flash[:notice] %>
<h1>任務首頁</h1>

<% @tasks.each do |task| %>
  <ul>
    <li>
      任務名稱:<%= link_to task.title, task_path(task) %>
      任務描述:<%= task.description %>
      <%= link_to "更新", edit_task_path(task), class: 'btn btn-success btn-sm' %>
      <%= link_to "刪除", task_path(task), method: 'delete', data: {confirm: '確定要刪除嗎？'}, class: 'btn btn-dark btn-sm' %>
    </li>
  </ul>
<% end %>

<%= link_to "新增任務", new_task_path , class: 'btn btn-info btn-lg'%>