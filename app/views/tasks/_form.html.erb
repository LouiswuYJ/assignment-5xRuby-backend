<% if @task.errors.any? %>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(task) do |form| %>
  <div>
    <%= form.label :title, t('views.tasks.title') %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, t('views.tasks.description') %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :priority, t('views.tasks.priority') %>
    <%= form.select :priority, priority_selection %>
  </div>

  <div>
    <%= form.label :start_time, t('views.tasks.start_time')%>
    <%= form.datetime_field :start_time %>
  </div>

  <div>
    <%= form.label :end_time, t('views.tasks.end_time')%>
    <%= form.datetime_field :end_time%>
  </div>

  <div>
    <%= form.label :tag_list, t('views.tasks.tag_list')%>
    <%= form.text_field :tag_list, placeholder:'aaa, bbb, ccc'%>
  </div>

  <div>
      <%= form.submit button_text,class:'btn btn-danger btn-lg' %> 
      <%= link_to t('views.cancel'), root_path, class: 'btn btn-success btn-lg' %>
  </div>
<% end %>